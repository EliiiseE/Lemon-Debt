<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :image, as: :string, label: "Image", placeholder: 'hamburger.png', required: true, error: 'Error', autofocus: true %>
    <%= f.input :title, as: :string, label: "Title", placeholder: 'Restaurants & Bars', required: true, error: 'Error' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>